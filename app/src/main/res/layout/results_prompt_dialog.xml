<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@drawable/bg_white_top_radius8"
        >
        <TextView
            android:id="@+id/results_prompt_tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/TextSize18"
            android:textColor="@color/black_091625"
            android:gravity="center_vertical"
            android:lineSpacingExtra="10dp"
            />
    </LinearLayout>
    <View style="@style/divider_line1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_white_buttom_radius8"
        >
        <Button
            android:id="@+id/results_prompt_btCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="@dimen/TextSize20"
            android:textColor="@color/blue_2496F9"
            android:background="@null"
            />
        <Button
            android:id="@+id/results_prompt_btSuccess"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="@dimen/TextSize20"
            android:textColor="@color/blue_2496F9"
            android:textStyle="bold"
            android:background="@null"
            />
    </LinearLayout>
</LinearLayout>