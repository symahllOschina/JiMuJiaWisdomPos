<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_f5f5f5"
    >
    <include layout="@layout/menu_title_layout"/>
    <View style="@style/divider_line1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:background="@color/white_ffffff"
        >
        <RelativeLayout
            android:id="@+id/refund_layoutQrcode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/refund_tvQrcodeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refund_qrcode"
                android:textSize="@dimen/TextSize18"
                android:textColor="@color/grey_676767"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/refund_imgScanQrcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/scan_icon"
                android:layout_alignParentRight="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />
            <com.jimujia.pos.view.ClearEditText
                android:id="@+id/refund_etRefundQrcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:hint="@string/refund_qrcode"
                android:background="@null"
                android:paddingLeft="7dp"
                android:textSize="@dimen/TextSize18"
                android:textColor="@color/black_323232"
                android:inputType="number"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_toRightOf="@id/refund_tvQrcodeTitle"
                android:layout_toLeftOf="@id/refund_imgScanQrcode"
                />
        </RelativeLayout>
        <View
            android:id="@+id/refund_viewFGX1"
            style="@style/divider_line1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refund_amount"
                android:textSize="@dimen/TextSize18"
                android:textColor="@color/grey_676767"
                android:gravity="right"
                />
            <com.jimujia.pos.view.ClearEditText
                android:id="@+id/refund_etRefundAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:hint="@string/refund_amount"
                android:background="@null"
                android:paddingLeft="7dp"
                android:textSize="@dimen/TextSize18"
                android:textColor="@color/black_323232"
                android:inputType="number"
                android:digits="0123456789."
                />
        </LinearLayout>
        <View
            android:id="@+id/refund_viewFGX2"
            style="@style/divider_line1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <Button
            android:id="@+id/refund_btRefund"
            style="@style/button_styles"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="100dp"
            />

    </LinearLayout>

</LinearLayout>
