<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/white_ffffff"
    >
    <ImageView
        android:id="@+id/menu_title_imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/back_icon"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible"
        />
    <LinearLayout
        android:id="@+id/menu_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:id="@+id/menu_title_tvTitle"
            style="@style/title_text_style"
            android:text="@string/app_name"
            />
        <ImageView
            android:id="@+id/menu_title_imgTitleImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/open_popupwindow_icon"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_title_layoutOption"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <ImageView
            android:id="@+id/menu_title_imgOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/screen_icon"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/menu_title_tvOption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="筛选"
            android:textSize="@dimen/TextSize14"
            android:textColor="@color/black_091625"
            android:visibility="gone"
            android:gravity="center"
            />
    </LinearLayout>


</RelativeLayout>
